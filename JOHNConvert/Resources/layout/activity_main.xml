<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Milliliters:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:id="@+id/textView1"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
         android:layout_marginTop="50dp"/>
      <TextView
        android:text="Liters:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
         android:layout_below="@id/textView1"/>
       <TextView
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:id="@+id/output"
        android:textSize="20dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="25dp"
         android:layout_below="@id/textView1"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input" 
        android:width="300dp"
        android:layout_toRightOf="@id/textView1"
        android:layout_marginTop="35dp"/>
    <Button
        android:text="CONVERT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convertBtn"
        android:layout_below="@id/textView2"
        android:width="350dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:text="Select Conversion:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@id/convertBtn"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"/>
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup1"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Milliliters to Litres"
            android:id="@+id/rb1" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Litres to Milliliters"
            android:id="@+id/rb2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Litres to Gallon"
            android:id="@+id/rb3" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallon to Litres"
            android:id="@+id/rb4" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kilometers to Lightyears"
            android:id="@+id/rb5" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lightyears to Kilometers"
            android:id="@+id/rb6" />
    </RadioGroup>

   
</RelativeLayout>